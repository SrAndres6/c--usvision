@model proyecto_c_.Models.Usuario

<h2 class="text-center">Registro de Usuario</h2>

<form asp-action="Registro" method="post" class="form-container">
    <table class="form-table">
        <tr><th>Usuario:</th><td><input asp-for="NombreUsuario" /></td></tr>
        <tr><th>Clave:</th><td><input asp-for="Clave" type="password" /></td></tr>
        <tr>
            <td colspan="2" class="text-center">
                <button type="submit" class="btn btn-primary">Registrar</button>
                <a href="/Login" class="btn btn-secondary">Volver al Login</a>
            </td>
        </tr>
    </table>
</form>

@if (ViewBag.Error != null)
{
    <div class="text-danger text-center mt-3">@ViewBag.Error</div>
}
@if (ViewBag.Mensaje != null)
{
    <div class="text-success text-center mt-3">@ViewBag.Mensaje</div>
}
