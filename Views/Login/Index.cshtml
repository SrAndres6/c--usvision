@model proyecto_c_.Models.Usuario

<h2 class="text-center">Iniciar Sesi√≥n</h2>

<form asp-action="Index" method="post" class="form-container">
    <table class="form-table">
        <tr><th>Usuario:</th><td><input asp-for="NombreUsuario" /></td></tr>
        <tr><th>Clave:</th><td><input asp-for="Clave" type="password" /></td></tr>
        <tr>
            <td colspan="2" class="text-center">
                <button type="submit" class="btn btn-primary">Ingresar</button>
                <a href="/Login/Registro" class="btn btn-success">Registrarse</a>
            </td>
        </tr>
    </table>
</form>

@if (ViewBag.Error != null)
{
    <div class="text-danger text-center mt-3">@ViewBag.Error</div>
}
