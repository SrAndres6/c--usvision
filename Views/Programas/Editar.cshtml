@model ProgramaAcademico

<h2>Editar Programa Académico</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <table class="table table-bordered table-striped">
        <tr>
            <th>Nombre</th>
            <td><input asp-for="Nombre" class="form-control" /></td>
        </tr>
        <tr>
            <th>Descripción</th>
            <td><input asp-for="Descripcion" class="form-control" /></td>
        </tr>
        <tr>
            <th>Duración (semestres)</th>
            <td><input asp-for="Duracion" type="number" class="form-control" /></td>
        </tr>
        <tr>
            <td colspan="2" class="text-end">
                <button type="submit" class="btn btn-primary">Actualizar</button>
                <a href="/Programas" class="btn btn-secondary">Cancelar</a>
            </td>
        </tr>
    </table>
</form>
