@model Estudiante
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Crear Estudiante";
    var rol = Context.Session.GetString("Rol");
}

<h2 class="text-center">Crear Estudiante</h2>

@if (!string.IsNullOrEmpty(rol) && rol == "Administrador")
{
    <form asp-action="Crear" method="post" class="form-container">
        <table class="table table-bordered table-striped">
            <tr>
                <th style="width: 30%">Nombre</th>
                <td><input asp-for="Nombre" class="form-control" /></td>
            </tr>
            <tr>
                <th>Programa</th>
                <td><input asp-for="Programa" class="form-control" /></td>
            </tr>
            <tr>
                <td colspan="2" class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="/Estudiantes" class="btn btn-secondary">Cancelar</a>
                </td>
            </tr>
        </table>
    </form>
}
else
{
    <div class="alert alert-danger text-center">
        No tienes permisos para crear estudiantes.
    </div>
}
