@model List<Docente>
@using Microsoft.AspNetCore.Http
@{
    var rol = Context.Session.GetString("Rol");
}

<h2>Listado de Docentes</h2>

@if (rol == "Administrador")
{
    <a href="/Docentes/Crear" class="btn btn-primary mb-3">Crear nuevo</a>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Nombre</td>
                <td>@d.Apellidos</td>
                <td>@d.Correo</td>
                <td>
                    @if (rol == "Administrador")
                    {
                        <a href="/Docentes/Editar/@d.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a href="/Docentes/Eliminar/@d.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
