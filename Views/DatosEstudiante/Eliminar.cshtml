@model DatosEstudiante
<h2>Eliminar Datos de Estudiante</h2>
<p>¿Estás seguro de eliminar los datos de @Model.Nombre?</p>
<form asp-action="EliminarConfirmado" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Eliminar</button>
    <a href="/DatosEstudiante" class="btn btn-secondary">Cancelar</a>
</form>
