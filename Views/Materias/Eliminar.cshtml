@model Materia
<h2>Eliminar Materia</h2>
<p>¿Estás seguro de eliminar la materia @Model.Nombre?</p>
<form asp-action="EliminarConfirmado" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Eliminar</button>
    <a href="/Materias" class="btn btn-secondary">Cancelar</a>
</form>
