@model Materia
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Crear Materia";
    var rol = Context.Session.GetString("Rol");
}

<h2 class="text-center">Crear Materia</h2>

@if (!string.IsNullOrEmpty(rol) && rol == "Administrador")
{
    <form asp-action="Crear" method="post">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Nombre</th>
                <td><input asp-for="Nombre" class="form-control" /></td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td><input asp-for="Descripcion" class="form-control" /></td>
            </tr>
            <tr>
                <th>Créditos</th>
                <td><input asp-for="Creditos" type="number" class="form-control" /></td>
            </tr>
            <tr>
                <td colspan="2" class="text-end">
                    <button type="submit" class="btn btn-success">Guardar</button>
                    <a href="/Materias" class="btn btn-secondary">Cancelar</a>
                </td>
            </tr>
        </table>
    </form>
}
else
{
    <div class="alert alert-danger text-center">
        No tienes permisos para crear materias.
    </div>
}
