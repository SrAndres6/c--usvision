@model Horario
<h2>Eliminar Horario</h2>
<p>¿Estás seguro de eliminar el horario de @Model.Dias a las @Model.HoraInicio?</p>
<form asp-action="EliminarConfirmado" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Eliminar</button>
    <a href="/Horarios" class="btn btn-secondary">Cancelar</a>
</form>
