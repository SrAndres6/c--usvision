@model List<DocumentoEstudiante>
@using Microsoft.AspNetCore.Http
@{
    var rol = Context.Session.GetString("Rol");
}

<h2>Listado de Documentos de Estudiantes</h2>

@if (rol == "Administrador")
{
    <a href="/DocumentosEstudiante/Crear" class="btn btn-primary mb-3">Crear nuevo</a>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Ruta</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
            <tr>
                <td>@doc.Nombre</td>
                <td>@doc.Descripcion</td>
                <td>@doc.Ruta</td>
                <td>
                    @if (rol == "Administrador")
                    {
                        <a href="/DocumentosEstudiante/Editar/@doc.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a href="/DocumentosEstudiante/Eliminar/@doc.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
